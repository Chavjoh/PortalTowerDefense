<UserControl x:Class="PortalRush.View.Control.MonsterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="0"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image x:Name="image" Grid.Row="2"/>
        <Border BorderBrush="White" BorderThickness="1" Background="#FF515151" HorizontalAlignment="Center" Width="50">
            <Rectangle x:Name="lifeBar" Fill="{DynamicResource BrushLifeGreen}" HorizontalAlignment="Left" Width="50"/>
        </Border>
    </Grid>
</UserControl>
